<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/loss_or_win"
        style="@style/BodyLargeNLv1Center"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="W"
        tools:textColor="@color/status_success" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/loss_or_win"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/first_team_score"
            style="@style/BodyLargeNLv1Center"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            tools:text="114" />

        <TextView
            style="@style/BodyLargeNLv1Center"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="-"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/second_team_score"
            style="@style/BodyLargeNLv1Center"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            tools:text="121" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>