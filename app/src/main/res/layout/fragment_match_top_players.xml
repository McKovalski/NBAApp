<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_surface_0"
    android:fillViewport="true"
    tools:context=".fragments.MatchTopPlayersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <include
            android:id="@+id/stats_points"
            layout="@layout/stats_top3_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp" />

        <include
            android:id="@+id/stats_field_goals"
            layout="@layout/stats_top3_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp" />

        <include
            android:id="@+id/stats_3_pointers"
            layout="@layout/stats_top3_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp" />

        <include
            android:id="@+id/stats_off_rebounds"
            layout="@layout/stats_top3_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp" />

        <include
            android:id="@+id/stats_rebounds"
            layout="@layout/stats_top3_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp" />

        <include
            android:id="@+id/stats_assists"
            layout="@layout/stats_top3_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp" />

        <include
            android:id="@+id/stats_turnovers"
            layout="@layout/stats_top3_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>