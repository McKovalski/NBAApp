<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PlayerStatisticsFragment"
    android:background="@color/surface_surface_0">

    <include
        android:id="@+id/seasons_mask"
        layout="@layout/seasons_mask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/first_row"
        layout="@layout/stats_table_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seasons_mask"
        android:layout_marginTop="8dp"/>

    <include
        android:id="@+id/second_row"
        layout="@layout/stats_table_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/first_row"/>

    <include
        android:id="@+id/third_row"
        layout="@layout/stats_table_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/second_row"/>

</androidx.constraintlayout.widget.ConstraintLayout>