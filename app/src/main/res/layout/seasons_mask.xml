<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface_surface_1"
    android:elevation="10dp">

    <TextView
        android:id="@+id/seasons_label"
        style="@style/BodyMediumNLv1Left"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/seasons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_seasons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/seasons_label"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/first_season"
            style="@style/AssistiveNLv2Center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="2021" />

        <TextView
            android:id="@+id/second_season"
            style="@style/AssistiveNLv2Center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="2020" />

        <TextView
            android:id="@+id/third_season"
            style="@style/AssistiveNLv2Center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="2019" />

        <TextView
            android:id="@+id/fourth_season"
            style="@style/AssistiveNLv2Center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="2018" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>