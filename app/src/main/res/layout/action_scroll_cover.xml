<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface_surface_1">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_regular_season"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/button_selector"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="13dp"
        android:paddingTop="8dp"
        android:paddingEnd="13dp"
        android:paddingBottom="8dp"
        android:text="@string/regular_season"
        android:textColor="@color/button_text_selector"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_playoffs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/button_selector"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="13dp"
        android:paddingTop="8dp"
        android:paddingEnd="13dp"
        android:paddingBottom="8dp"
        android:text="@string/playoffs"
        android:textColor="@color/button_text_selector"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_regular_season"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_filter"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>